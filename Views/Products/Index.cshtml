@model IEnumerable<Merlin_web_Application.Models.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["UserName"] == null)
    {
        Response.Redirect("~/Account/Login", false);
    }

}





<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Products</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Products DataTable </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SupplierCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AECID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PriceUnit)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PerPallet)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PalletID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Inactive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InactiveNotes)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateCreated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CostPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Colour.ColourName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Feature.FeatureName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NeckFinish.NeckFinishName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductGroup.StockTypeID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Size.SizeDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Supplier.SupplierName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.weight.WeightDescription)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AECID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PriceUnit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PerPallet)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PalletID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Inactive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InactiveNotes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CostPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Colour.ColourName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Feature.FeatureName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NeckFinish.NeckFinishName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductGroup.StockTypeID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Size.SizeDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.weight.WeightDescription)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-success" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }


                </table>
            </div>
        </div>
    </div>
</body>
</html>
